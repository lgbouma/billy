@article{geller_direct_2013,
	title = {Direct {N}-body {Modeling} of the {Old} {Open} {Cluster} {NGC} 188: {A} {Detailed} {Comparison} of {Theoretical} and {Observed} {Binary} {Star} and {Blue} {Straggler} {Populations}},
